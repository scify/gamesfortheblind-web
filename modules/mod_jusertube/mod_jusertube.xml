<?xml version="1.0" encoding="utf-8"?>
<extension type = "module"
		   version = "2.5"
		   client = "site"
		   method = "upgrade">
	<name>JUserTube</name>
	<author>Md. Afzal Hossain</author>
	<creationDate>May 2012</creationDate>
	<copyright>All rights reserved by Afzal</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>afzal.csedu@gmail.com</authorEmail>
	<authorUrl>http://www.srizon.com</authorUrl>
	<version>8.1</version>
	<description>MOD_JUSERTUBE_XML_DESCRIPTION</description>
	<files>
		<filename module = "mod_jusertube">mod_jusertube.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>lib</folder>
	</files>

	<languages>
		<language tag = "en-GB">language/en-GB/en-GB.mod_jusertube.ini</language>
		<language tag = "en-GB">language/en-GB/en-GB.mod_jusertube.sys.ini</language>
	</languages>

	<media>
		<folder>srizon</folder>
	</media>

	<config>
		<fields name = "params">
			<fieldset name = "basic">

				<field name = "youtubeuser"
					   type = "text"
					   default = ""
					   label = "MOD_JUSERTUBE_YOUTUBEUSER_LABEL"
					   description = "MOD_JUSERTUBE_YOUTUBEUSER_DESCRIPTION"/>

				<field name = "plsortorder"
					   type = "list"
					   default = "published"
					   label = "MOD_JUSERTUBE_PLSORTORDER_LABEL"
					   description = "MOD_JUSERTUBE_PLSORTORDER_DESCRIPTION">
					<option value = "position">MOD_JUSERTUBE_OPT_POSITION</option>
					<option value = "positionr">MOD_JUSERTUBE_OPT_POSITIONR</option>
				</field>

				<field name = "updatefeed"
					   type = "list"
					   default = "600"
					   label = "MOD_JUSERTUBE_UPDATEFEED_LABEL"
					   description = "MOD_JUSERTUBE_UPDATEFEED_DESCRIPTION">
					<option value = "30">MOD_JUSERTUBE_OPT_30</option>
					<option value = "60">MOD_JUSERTUBE_OPT_60</option>
					<option value = "300">MOD_JUSERTUBE_OPT_300_M</option>
					<option value = "600">MOD_JUSERTUBE_OPT_600_M</option>
					<option value = "1440">MOD_JUSERTUBE_OPT_1440</option>
					<option value = "10080">MOD_JUSERTUBE_OPT_10080</option>
				</field>

				<field type = "spacer"
					   hr = "true"/>
				<field name = "thumbres"
					   type = "list"
					   default = "medium"
					   label = "MOD_JUSERTUBE_THUMBRES_LABEL"
					   description = "MOD_JUSERTUBE_THUMBRES_DESCRIPTION">
					<option value = "medium">MOD_JUSERTUBE_OPT_THUMBRES_LOWEST</option>
					<option value = "high">MOD_JUSERTUBE_OPT_THUMBRES_HIGH</option>
					<option value = "standard">MOD_JUSERTUBE_OPT_THUMBRES_BIG</option>
					<option value = "maxres">MOD_JUSERTUBE_OPT_THUMBRES_MAX</option>
				</field>

				<field name = "totalvideo"
					   type = "text"
					   default = "24"
					   label = "MOD_JUSERTUBE_TOTALVIDEO_LABEL"
					   description = "MOD_JUSERTUBE_TOTALVIDEO_DESCRIPTION"/>

				<field name = "totalvideopagi"
					   type = "text"
					   default = "100"
					   label = "MOD_JUSERTUBE_TOTALVIDEOPAGI_LABEL"
					   description = "MOD_JUSERTUBE_TOTALVIDEOPAGI_DESCRIPTION"/>

				<field
						name = "layout"
						type = "modulelayout"
						label = "MOD_JUSERTUBE_LISTSTYLE_LABEL"
						description = "MOD_JUSERTUBE_LISTSTYLE_DESCRIPTION"/>

				<field name = "vidicon"
					   label = "MOD_JUSERTUBE_VIDICON_LABEL"
					   type = "radio"
					   default = "yes">
					<option value = "yes">MOD_JUSERTUBE_OPT_YES</option>
					<option value = "no">MOD_JUSERTUBE_OPT_NO</option>
				</field>

			</fieldset>

			<fieldset name = "thumbgrid"
					  label = "MOD_JUSERTUBE_THUMBGRID_LABEL">
				<field type = "spacer"
					   label = "MOD_JUSERTUBE_4_LABEL"/>
				<field name = "thumbsinarowl"
					   type = "list"
					   default = "3"
					   label = "MOD_JUSERTUBE_THUMBSINAROWL_LABEL"
					   description = "MOD_JUSERTUBE_THUMBSINAROWL_DESCRIPTION">
					<option value = "1">MOD_JUSERTUBE_OPT_1</option>
					<option value = "2">MOD_JUSERTUBE_OPT_2</option>
					<option value = "3">MOD_JUSERTUBE_OPT_3</option>
					<option value = "4">MOD_JUSERTUBE_OPT_4</option>
					<option value = "5">MOD_JUSERTUBE_OPT_5</option>
				</field>

				<field name = "thumbsinarows"
					   type = "list"
					   default = "1"
					   label = "MOD_JUSERTUBE_THUMBSINAROWS_LABEL"
					   description = "MOD_JUSERTUBE_THUMBSINAROWS_DESCRIPTION">
					<option value = "1">MOD_JUSERTUBE_OPT_1</option>
					<option value = "2">MOD_JUSERTUBE_OPT_2</option>
					<option value = "3">MOD_JUSERTUBE_OPT_3</option>
					<option value = "4">MOD_JUSERTUBE_OPT_4</option>
					<option value = "5">MOD_JUSERTUBE_OPT_5</option>
				</field>

				<field name = "thumbpadding"
					   type = "list"
					   default = "7"
					   label = "MOD_JUSERTUBE_THUMBPADDING_LABEL">
					<option value = "2">MOD_JUSERTUBE_OPT_2_PX</option>
					<option value = "3">MOD_JUSERTUBE_OPT_3_PX</option>
					<option value = "5">MOD_JUSERTUBE_OPT_5_PX</option>
					<option value = "7">MOD_JUSERTUBE_OPT_7_PX</option>
					<option value = "10">MOD_JUSERTUBE_OPT_10_PX</option>
				</field>

				<field name = "showtitlethumb"
					   type = "radio"
					   default = "yes"
					   label = "MOD_JUSERTUBE_SHOWTITLETHUMB_LABEL">
					<option value = "yes">MOD_JUSERTUBE_OPT_YES</option>
					<option value = "no">MOD_JUSERTUBE_OPT_NO</option>
				</field>

				<field name = "titlethumb_height"
					   type = "text"
					   default = "50"
					   label = "MOD_JUSERTUBE_TITLETHUMB_HEIGHT_LABEL"
					   description = "MOD_JUSERTUBE_TITLETHUMB_HEIGHT_DESCRIPTION"/>

			</fieldset>

			<fieldset name = "thumbdesc"
					  label = "MOD_JUSERTUBE_THUMBDESC_LABEL">
				<field type = "spacer"
					   label = "MOD_JUSERTUBE_5_LABEL"/>
				<field name = "ratioclass"
					   type = "list"
					   default = "ratio3565"
					   label = "MOD_JUSERTUBE_RATIOCLASS_LABEL"
					   description = "MOD_JUSERTUBE_RATIOCLASS_DESCRIPTION">
					<option value = "ratio2080">MOD_JUSERTUBE_OPT_RATIO2080</option>
					<option value = "ratio2575">MOD_JUSERTUBE_OPT_RATIO2575</option>
					<option value = "ratio3565">MOD_JUSERTUBE_OPT_RATIO3565</option>
					<option value = "ratio5050">MOD_JUSERTUBE_OPT_RATIO5050</option>
					<option value = "ratio100">MOD_JUSERTUBE_OPT_RATIO100</option>
				</field>
				<field name = "truncate_len2"
					   type = "text"
					   default = "300"
					   label = "MOD_JUSERTUBE_TRUNCATE_LEN2_LABEL"/>
			</fieldset>

			<fieldset name = "thumbgriddesccommon"
					  label = "MOD_JUSERTUBE_THUMBGRIDDESCCOMMON_LABEL">
				<field type = "spacer"
					   label = "MOD_JUSERTUBE_6_LABEL"/>
				<field name = "truncate_len"
					   type = "text"
					   default = ""
					   label = "MOD_JUSERTUBE_TRUNCATE_LEN_LABEL"/>
				<field name = "roundingclass"
					   type = "list"
					   default = "rounding7"
					   label = "MOD_JUSERTUBE_ROUNDINGCLASS_LABEL"
					   description = "MOD_JUSERTUBE_ROUNDINGCLASS_DESCRIPTION">
					<option value = "rounding3">MOD_JUSERTUBE_OPT_ROUNDING3</option>
					<option value = "rounding5">MOD_JUSERTUBE_OPT_ROUNDING5</option>
					<option value = "rounding7">MOD_JUSERTUBE_OPT_ROUNDING7</option>
					<option value = "rounding10">MOD_JUSERTUBE_OPT_ROUNDING10</option>
					<option value = "rounding0">MOD_JUSERTUBE_OPT_ROUNDING0</option>
				</field>

				<field name = "shadowclass"
					   type = "list"
					   default = "shadow10d"
					   label = "MOD_JUSERTUBE_SHADOWCLASS_LABEL"
					   description = "MOD_JUSERTUBE_SHADOWCLASS_DESCRIPTION">
					<option value = "shadow10l">MOD_JUSERTUBE_OPT_SHADOW10L</option>
					<option value = "shadow5l">MOD_JUSERTUBE_OPT_SHADOW5L</option>
					<option value = "shadow10d">MOD_JUSERTUBE_OPT_SHADOW10D</option>
					<option value = "shadow5d">MOD_JUSERTUBE_OPT_SHADOW5D</option>
					<option value = "shadow0">MOD_JUSERTUBE_OPT_SHADOW0</option>
				</field>

				<field name = "show_date"
					   type = "radio"
					   default="0"
					   label = "MOD_JUSERTUBE_SHOW_DATE_LABEL">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="date_format"
						type="text"
						label="MOD_JUSERTUBE_DATE_FORMAT_LABEL"
						default="M d, Y"/>
			</fieldset>

			<fieldset name = "respsliderset"
					  label = "MOD_JUSERTUBE_RESPSLIDERSET_LABEL">
				<field type = "spacer"
					   label = "MOD_JUSERTUBE_7_LABEL"/>
				<field name = "respslidespeed"
					   type = "text"
					   default = "500"
					   label = "MOD_JUSERTUBE_RESPSLIDESPEED_LABEL"
					   description = ""/>
				<field name = "respslidestart"
					   type = "text"
					   default = "0"
					   label = "MOD_JUSERTUBE_RESPSLIDESTART_LABEL"
					   description = "MOD_JUSERTUBE_RESPSLIDESTART_DESCRIPTION"/>
				<field name = "targetheight"
					   type = "text"
					   default = "200"
					   label = "MOD_JUSERTUBE_TARGETHEIGHT_LABEL"
					   description = ""/>
				<field name = "scroll_interval"
					   type = "text"
					   default = "0"
					   label = "MOD_JUSERTUBE_AUTOSCROLL_LABEL"
					   description = ""/>
			</fieldset>

			<fieldset name = "text" label="MOD_JUSERTUBE_TEXT_FIELDSET_LABEL">
				<field type="textarea" filter="raw" label="MOD_JUSERTUBE_PRE_TEXT_LABEL" description="MOD_JUSERTUBE_PRE_TEXT_DESCRIPTION" name="pre_text" />
				<field type="textarea" filter="raw" label="MOD_JUSERTUBE_POST_TEXT_LABEL" description="MOD_JUSERTUBE_POST_TEXT_DESCRIPTION" name="post_text" />
			</fieldset>

			<fieldset name = "advanced">
				<field name = "moduleclass_sfx"
					   type = "textarea"
					   rows = "3"
					   label = "COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					   description = "COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
				<field name = "cache"
					   type = "list"
					   default = "1"
					   label = "COM_MODULES_FIELD_CACHING_LABEL"
					   description = "COM_MODULES_FIELD_CACHING_DESC">
					<option value = "1">JGLOBAL_USE_GLOBAL</option>
					<option value = "0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name = "cache_time"
					   type = "text"
					   default = "900"
					   label = "COM_MODULES_FIELD_CACHE_TIME_LABEL"
					   description = "COM_MODULES_FIELD_CACHE_TIME_DESC"/>
				<field name = "cachemode"
					   type = "hidden"
					   default = "static">
					<option value = "static">MOD_JUSERTUBE_OPT_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
