<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title = "JuserTube - Grid with Description">
		<message>This will display thumbnails of the videos row by row (max fit in a row)</message>
	</layout>
	<fields name = "params">
		<fieldset name = "basic">
			<field name = "youtubeuser"
				   type = "text"
				   default = ""
				   label = "COM_JUSERTUBE_YOUTUBEUSER_LABEL"
				   description = "COM_JUSERTUBE_YOUTUBEUSER_DESCRIPTION"/>


			<field name = "plsortorder"
				   type = "list"
				   default = "published"
				   label = "COM_JUSERTUBE_PLSORTORDER_LABEL"
				   description = "COM_JUSERTUBE_PLSORTORDER_DESCRIPTION">
				<option value = "position">COM_JUSERTUBE_OPT_POSITION4</option>
				<option value = "positionr">COM_JUSERTUBE_OPT_POSITIONR5</option>
			</field>

			<field name = "updatefeed"
				   type = "list"
				   default = "600"
				   label = "COM_JUSERTUBE_UPDATEFEED_LABEL"
				   description = "COM_JUSERTUBE_UPDATEFEED_DESCRIPTION">
				<option value = "30">COM_JUSERTUBE_OPT_3011</option>
				<option value = "60">COM_JUSERTUBE_OPT_6012</option>
				<option value = "300">COM_JUSERTUBE_OPT_30013</option>
				<option value = "600">COM_JUSERTUBE_OPT_60014</option>
				<option value = "1440">COM_JUSERTUBE_OPT_144015</option>
				<option value = "10080">COM_JUSERTUBE_OPT_1008016</option>
			</field>

			<field type = "spacer"
				   hr = "true"/>
			<field name = "totalvideop"
				   type = "text"
				   default = "50"
				   label = "COM_JUSERTUBE_TOTALVIDEO_LABEL"
				   description = "COM_JUSERTUBE_TOTALVIDEO_DESCRIPTION"/>

			<field name = "thumbres"
				   type = "list"
				   default = "medium"
				   label = "COM_JUSERTUBE_THUMBRES_LABEL"
				   description = "COM_JUSERTUBE_THUMBRES_DESCRIPTION">
				<option value = "medium">COM_JUSERTUBE_OPT_THUMBRES_LOWEST</option>
				<option value = "high">COM_JUSERTUBE_OPT_THUMBRES_HIGH</option>
				<option value = "standard">COM_JUSERTUBE_OPT_THUMBRES_BIG</option>
				<option value = "maxres">COM_JUSERTUBE_OPT_THUMBRES_MAX</option>
			</field>

			<field name = "totalvideo"
				   type = "text"
				   default = "24"
				   label = "COM_JUSERTUBE_PAGINATEAFTER_LABEL"
				   description = "COM_JUSERTUBE_PAGINATEAFTER_DESCRIPTION"/>

			<field name = "thumbsinarowl"
				   type = "list"
				   default = "3"
				   label = "COM_JUSERTUBE_THUMBSINAROWL_LABEL"
				   description = "COM_JUSERTUBE_THUMBSINAROWL_DESCRIPTION">
				<option value = "1">COM_JUSERTUBE_OPT_127</option>
				<option value = "2">COM_JUSERTUBE_OPT_228</option>
				<option value = "3">COM_JUSERTUBE_OPT_329</option>
				<option value = "4">COM_JUSERTUBE_OPT_430</option>
				<option value = "5">COM_JUSERTUBE_OPT_531</option>
			</field>

			<field name = "thumbsinarows"
				   type = "list"
				   default = "1"
				   label = "COM_JUSERTUBE_THUMBSINAROWS_LABEL"
				   description = "COM_JUSERTUBE_THUMBSINAROWS_DESCRIPTION">
				<option value = "1">COM_JUSERTUBE_OPT_132</option>
				<option value = "2">COM_JUSERTUBE_OPT_233</option>
				<option value = "3">COM_JUSERTUBE_OPT_334</option>
				<option value = "4">COM_JUSERTUBE_OPT_435</option>
				<option value = "5">COM_JUSERTUBE_OPT_536</option>
			</field>

			<field name = "thumbpadding"
				   type = "list"
				   default = "7"
				   label = "COM_JUSERTUBE_THUMBPADDING_LABEL">
				<option value = "2">COM_JUSERTUBE_OPT_237</option>
				<option value = "3">COM_JUSERTUBE_OPT_338</option>
				<option value = "5">COM_JUSERTUBE_OPT_539</option>
				<option value = "7">COM_JUSERTUBE_OPT_740</option>
				<option value = "10">COM_JUSERTUBE_OPT_1041</option>
			</field>

			<field name = "roundingclass"
				   type = "list"
				   default = "rounding7"
				   label = "COM_JUSERTUBE_ROUNDINGCLASS_LABEL"
				   description = "COM_JUSERTUBE_ROUNDINGCLASS_DESCRIPTION">
				<option value = "rounding3">COM_JUSERTUBE_OPT_ROUNDING342</option>
				<option value = "rounding5">COM_JUSERTUBE_OPT_ROUNDING543</option>
				<option value = "rounding7">COM_JUSERTUBE_OPT_ROUNDING744</option>
				<option value = "rounding10">COM_JUSERTUBE_OPT_ROUNDING1045</option>
				<option value = "rounding0">COM_JUSERTUBE_OPT_ROUNDING046</option>
			</field>

			<field name = "shadowclass"
				   type = "list"
				   default = "shadow10d"
				   label = "COM_JUSERTUBE_SHADOWCLASS_LABEL"
				   description = "COM_JUSERTUBE_SHADOWCLASS_DESCRIPTION">
				<option value = "shadow10l">COM_JUSERTUBE_OPT_SHADOW10L47</option>
				<option value = "shadow5l">COM_JUSERTUBE_OPT_SHADOW5L48</option>
				<option value = "shadow10d">COM_JUSERTUBE_OPT_SHADOW10D49</option>
				<option value = "shadow5d">COM_JUSERTUBE_OPT_SHADOW5D50</option>
				<option value = "shadow0">COM_JUSERTUBE_OPT_SHADOW051</option>
			</field>

			<field name = "vidicon"
				   label = "COM_JUSERTUBE_VIDICON_LABEL"
				   description = "COM_JUSERTUBE_VIDICON_DESCRIPTION"
				   type = "radio"
				   default = "yes">
				<option value = "yes">COM_JUSERTUBE_OPT_YES52</option>
				<option value = "no">COM_JUSERTUBE_OPT_NO53</option>
			</field>


			<field name = "titlethumb_height"
				   type = "text"
				   default = "450"
				   label = "COM_JUSERTUBE_TITLETHUMB_HEIGHT_LABEL"
				   description = "COM_JUSERTUBE_TITLETHUMB_HEIGHT_DESCRIPTION"/>

			<field name = "truncate_len"
				   type = "text"
				   default = ""
				   label = "COM_JUSERTUBE_TRUNCATE_LEN_LABEL"
				   description = "COM_JUSERTUBE_TRUNCATE_LEN_DESCRIPTION"/>

			<field name = "truncate_len2"
				   type = "text"
				   default = "300"
				   label = "COM_JUSERTUBE_TRUNCATE_LEN2_LABEL"
				   description = ""/>
			<field name = "show_date"
				   type = "radio"
				   default="0"
				   label = "COM_JUSERTUBE_SHOW_DATE_LABEL">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field
					name="date_format"
					type="text"
					label="COM_JUSERTUBE_DATE_FORMAT_LABEL"
					default="M d, Y"/>

		</fieldset>
		<fieldset name = "text">
			<field type="textarea" filter="raw" label="COM_JUSERTUBE_PRE_TEXT_LABEL" description="COM_JUSERTUBE_PRE_TEXT_DESCRIPTION" name="pre_text" />
			<field type="textarea" filter="raw" label="COM_JUSERTUBE_POST_TEXT_LABEL" description="COM_JUSERTUBE_POST_TEXT_DESCRIPTION" name="post_text" />
		</fieldset>
	</fields>
</metadata>
