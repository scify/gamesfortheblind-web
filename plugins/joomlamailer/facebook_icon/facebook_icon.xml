<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="joomlamailer" method="upgrade">
    <name>joomlamailer - Facebook icon</name>
    <version>1.0</version>
    <creationDate>2014-08-16</creationDate>
    <author>freakedout</author>
    <authorEmail>contact@feakedout.de</authorEmail>
    <authorUrl>http://www.freakedout.de</authorUrl>
    <copyright>Copyright (C) 2015 freakedout. All rights reserved.</copyright>
    <license>GNU/GPL - http://www.gnu.org/licenses/gpl-2.0.html</license>
    <description>Facebook icon plugin for joomlamailer.</description>

    <files>
        <filename plugin="facebook_icon">facebook_icon.php</filename>
        <filename>index.html</filename>
    </files>

    <media destination="plg_joomlamailer_facebook_icon" folder="media">
        <filename>images/addfb.png</filename>
    </media>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_joomlamailer_facebook_icon.ini</language>
        <language tag="de-DE">language/de-DE/de-DE.plg_joomlamailer_facebook_icon.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.plg_joomlamailer_facebook_icon.ini</language>
    </languages>
