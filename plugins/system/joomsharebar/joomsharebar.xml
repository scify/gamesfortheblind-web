                    <option value="disable" disabled="true">WANT_THIS_DISABLE</option>
                </field>

                <field name="sub_header_6.2" type="sub" text="JSB_JQUERY" />
                <field name="prevent_jquery_load" type="cb" value="1" label="Prevent jQuery Load" description="If you are having possible jQuery conflicts, this is the first setting to enable." >
                </field>


            </fieldset>
