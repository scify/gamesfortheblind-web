                <field name="transformVerticalHorizontal" type="cb" value="1" label="Auto Transform Skyscraper to Horizontal Bar" description="When a website visitor has a limited screen resolution a skyscraper can fall off the viewable screen. When enabled the skyscraper is automatically transformed into a horizontal bar (based on the set pixels in the next option)!" >
                </field>

                <field name="transformVerticalHorizontalPixels" type="text" default="1200" size="20" label="Transform on Screen smaller then width (in pixels)" description="When a website visitor has a limited screen resolution a skyscraper can fall off the viewable screen. In this case the vertical skyscraper can automatically be transformed into a horizontal bar! Set the width in pixels when the transformation needs to take place." />-->

                <field name="sub_header_6" type="sub" text="JSB_LAZY" />

                <field name="lazyLoadingType" type="radio" class="radio_margin" default="default" label="Lazy Loading Type" description="Enable or disable Lazy Loading Buttons. Enabling this setting loads the social buttons only when needed, asynchronously! This means that your website renders without hanging on 50KB of social media!">
                    <option value="default">LAZY_LOADING_DEFAULT</option>
                    <option value="scroll" disabled="true">LAZY_LOADING_SCROLL</option>
                    <option value="hover" disabled="true">LAZY_LOADING_HOVER</option>
                    <option value="no_load" disabled="true">LAZY_LOADING_NOLOAD</option>
                </field>

                <field name="sub_header_5" type="sub" text="JSB_AUTO_TRANSFORM" />

                <field name="responsive" type="radio" label="JSB_AUTO_TRANSFORM" class="radio_margin" default="default">
                    <option value="default" disabled="true">RESPONSIVE</option>
                </field>

                <field name="note_responsive" type="note" text="ONLY Plugin in the Joomla! Extensions Directory with Responsive Support! On small resolutions a Vertical Skyscraper will be auto transformed to a Horizontal Bar so the Sharing buttons are always visible!" />

                <field name="sub_header_k2" type="sub" text="JSB_OTHER_CONTENT" />
                <field name="showInK2" type="radio" class="radio_margin" default="default" label="Show in K2 Content" ><option value="default" disabled="true">SHOWK2</option>
                </field>

                <field name="sub_header_6.1" type="sub" text="JSB_SUPPORT" />
                <field name="want_this" type="radio" class="radio_margin" default="enable" label="Support Author" description="Enable or disable Lazy Loading Buttons. Enabling this setting loads the social buttons only when needed, asynchronously! This means that your website renders without hanging on 50KB of social media!">
