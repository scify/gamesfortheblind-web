        <fields name="params" addfieldpath="/plugins/system/joomsharebar/joomsharebar/admin/formfields">
            <fieldset name="JSB_BASIC_SETTINGS">
                <field type="item" path="/plugins/system/joomsharebar/joomsharebar/admin/" />
                <field name="sub_header_1" type="sub" text="JSB_SUB_ARTICLE_VIEW_SETTINGS" />
                <field name="showInArticleView" type="cb" value="1" label="Show in Article view" description="Display the plugin in Article view or not." >
                </field>

                <field name="skyscraperOrBar" type="list" default="skyscraper" label="Display as (in Article view)" description="Do you want to display the buttons as a horizontal bar or as (vertical) Skyscraper?">
                    <option value="skyscraper">Floating Vertical Skyscraper</option>
                    <option value="horizontal_bar">Horizontal Bar</option>
                </field>

                <field name="horizontalBarTopBottom" type="list" default="top" label="Top/Bottom Article (Hori Bar Only)" description="Do you want to display the buttons on the top or bottom of the article? This setting only applies if you have selected Horizontal Bar in Article View above.">
                    <option value="top">Top of article</option>
                    <option value="bottom">Bottom of Article</option>
                </field>

                <field name="buttonLayout_ArticleView" type="radio" class="radio_margin" default="vertical" label="Button Layout Article View" description="Select a Button Layout Style for the Article View.">
                    <option value="vertical">VERTICAL_ANNOTATION_ARTICLE_VIEW</option>
                    <option value="horizontal">HORIZONTAL_ANNOTATION_ARTICLE_VIEW</option>
                </field>

                <field name="excludeArticles" type="text" default="" label="Exclude Article(s)" description="Exclude content articles from showing JoomShareBar. Enter the article ID that shouldn't display the plugin. Multiple articles can be entered by separating IDs by a comma (,). Article IDs can be found in 'Content->Article Manager' in the most right column." />

                <field name="sub_header_0" type="sub" text="JSB_SUB_FRONTPAGE_VIEW_SETTINGS" />
                <field name="showOnFrontpage" type="cb" value="1" label="Show on Frontpage (Featured View)" description="Display the plugin on Frontpage (Featured View) or not." >
                </field>
                <field name="note_frontpage" type="note" text="Note: On the Frontpage it is ONLY possible to display a Vertical Skyscraper, regardless of the 'Display as (in Article View)' setting above. The design will be inherited from Article View Design." />
                <field name="enableFBPageUrl" type="cb" value="1" label="Enable Facebook Page URL (Frontpage Only)" description="ONLY on Frontpage: use a specified Facebook Page URL in stead of the domain url." ></field>
                <field name="note_fb_url" type="note" text="Note: if Facebook Page URL is enabled, (ONLY) the FRONTPAGE will use the specified URL in the field below. Big advantage: when a user likes your homepage, he or she automatically likes you FB Page." />
                <field name="FBPageUrl" type="text" default="http://www.facebook.com/XXXXXX" label="Facebook Page URL" description="Replace the XXXXXX with your unique Facebook Page URL (e.g. http://www.facebook.com/joomarketer)." />
                <field name="note_fb_url_set" type="note" text="Replace XXXXXX in the text field above with your unique Facebook Page URL (e.g. http://www.facebook.com/joomarketer)." />

                <field name="sub_header_3" type="sub" text="JSB_SUB_CATEGORY_VIEW_SETTINGS" />

                <field name="showBarInCategoryView" type="cb" value="1" label="Show in Category view" description="Display the horizontal bar in Category view or not. In Category view only horizontal bar display is possible due to the possibility of multiple instances of the plugin as it is displayed for all articles." >
                </field>

                <field name="note_cat_bar" type="note" text="In Category (Blog) View it is ONLY possible to display a Horizontal Bar due to the fact that there are multiple articles with their own specific number of shares." />

                <!--<field name="skyscraperOrBar_CategoryView" type="list" default="horizontal_bar" label="Display as (in Category view). READ NOTE!" description="Do you want to display the buttons as a horizontal bar or as (vertical) Skyscraper in Category View? &lt;br /&gt;&lt;br /&gt;&lt;b&gt;NOTE: Be sure to test your settings properly! Category view can display multiple instances of the plugin and can therefore make a layout mess of your website if wrongly set up.&lt;/b&gt;">
                    <option value="skyscraper">Vertical Skyscraper</option>
                    <option value="horizontal_bar">Horizontal Bar</option>
                </field>-->

                <field name="catViewTopBottom" type="list" default="top" label="Top/Bottom Category View" description="Do you want to display the buttons on the top or bottom in Category View?">
                    <option value="top">Top</option>
                    <option value="bottom">Bottom</option>
                </field>

                <field name="buttonLayout_CategoryView" type="radio" class="radio_margin" default="horizontal" label="Button Layout Category View" description="Select a Button Layout Style for the Category View.">
                    <option value="vertical">VERTICAL_ANNOTATION_CATEGORY_VIEW</option>
                    <option value="horizontal">HORIZONTAL_ANNOTATION_CATEGORY_VIEW</option>
                </field>

                <field name="excludeCats" type="text" default="" label="Exclude Categories" description="Exclude content categories from showing JoomShareBar. Enter the category ID that shouldn't display the plugin. Multiple categories can be entered by separating IDs by a comma (,). Category IDs can be found in 'Content->Category Manager' and then the most right column." />

                <field name="sub_header_2" type="sub" text="JSB_SUB_SKYSCRAPER_SETTINGS" />
                <field name="note_00" type="note" text="JSB_SUB_SKYSCRAPER_SETTINGS_DESC" />
                <field type="text" name="skyscraperLeftMarginFromCenter" default="-620px" label="Left Margin from Center" description="Fill out a number followed by px (e.g. 10px), default -620px. Only adjust if the skyscraper overlaps your website." />
                <field name="note_001" type="note" text="JSB_SUB_SKYSCRAPER_MARGIN_DESC" />
                <field type="text" name="skyscraperMarginFromTop" default="200px" label="Initial Top Position" description="Fill out a number followed by px (e.g. 10px), default 200px. This number sets the initial position of the Skyscraper from the top. If you choose to enable the sliding mechanisn the margin from the top can be set in the design for that specific view (3.2 / 3.3)." />
                <field name="note_002" type="note" text="JSB_SUB_SKYSCRAPER_POSITION_DESC" />
                <field name="alignmentButtonsArticle" type="list" default="center" label="Aligns buttons (Skyscraper)" description="Choose the button alignment (for the skyscraper only).">
                    <option value="left">Left</option>
                    <option value="center">Center</option>
                    <option value="right">Right</option>
                </field>

            </fieldset>
            <fieldset name="JSB_EXTRA_SETTINGS">
                <field type="item" path="/plugins/system/joomsharebar/joomsharebar/admin/" />
                <field name="sub_header_4" type="sub" text="JSB_SUB_FOLLOW" />

                <field name="verticalSlide" type="radio" class="radio_margin" default="slide" label="Skyscraper Slide/Follow Effect" description="Enable / Disable Slide effect of Vertical Skyscraper. This only applies for the ARTICLE view in combination with the Vertical Skyscraper!">
