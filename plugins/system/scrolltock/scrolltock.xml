<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"
		type="plugin"
		group="system"
		method="upgrade">
	<name>Scroll To CK</name>
	<author>Cédric KEIFLIN</author>
	<creationDate>Décembre 2014</creationDate>
	<copyright>Cédric KEIFLIN</copyright>
	<license>http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail></authorEmail>
	<authorUrl>http://www.joomlack.fr</authorUrl>
	<version>1.0.5</version>
	<description>PLG_SCROLLTOCK_XML_DESC</description>
	<files>
		<filename plugin="scrolltock">scrolltock.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>images</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_scrolltock.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_scrolltock.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_system_scrolltock.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_system_scrolltock.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="scrolltockeffects" label="PLG_SCROLLTOCK_OPTIONS_EFFECTS">
				<field 
					name="fxduration" 
					type="text" 
					default="1000" 
					label="PLG_SCROLLTOCK_FXDURATION_LABEL" 
					description="PLG_SCROLLTOCK_FXDURATION_DESC" 
					suffix="ms" 
					icon="hourglass.png"
					/>
				<field 
					name="offsety" 
					type="text" 
					default="0" 
					label="PLG_SCROLLTOCK_OFFSETY_LABEL" 
					description="PLG_SCROLLTOCK_OFFSETY_DESC" 
					suffix="px" 
					icon="offsety.png"
					/>
			</fieldset>
			<fieldset name="scrolltocktotop" label="PLG_SCROLLTOCK_OPTIONS_TOTOP">
				<field 
					name="activatetotop" 
					type="radio" 
					default="1" 
					label="PLG_SCROLLTOCK_ACTIVATETOTOP_LABEL" 
					description="PLG_SCROLLTOCK_ACTIVATETOTOP_DESC" 
					suffix="ms" 
					icon=""
					class="btn-group"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field 
					name="totop_startoffset" 
					type="text" 
					default="100" 
					label="PLG_SCROLLTOCK_START_OFFSET_LABEL" 
					description="PLG_SCROLLTOCK_START_OFFSET_DESC" 
					suffix="px" 
					icon="offsety.png"
					/>
			</fieldset>
		</fields>
	</config>
</extension>
