<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_onepage/models/fields"
	>
        <field name="id" type="hidden" default="0"
            readonly="true" class="readonly"
            label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC" />    

		<field name="onepage_id" type="onepagecustomonepageid"
			label="COM_ONEPAGE_FIELD_ONEPAGE_ID_LABEL" 
			description ="COM_ONEPAGE_FIELD_ONEPAGE_ID_DESC" required="true" 
			 />
        <field name="title" type="text"
            label="COM_ONEPAGE_FIELD_ONEPAGE_TITLE_LABEL" 
            description ="COM_ONEPAGE_FIELD_ONEPAGE_TITLE_DESC" required="true" 
             />             

		<field name="menu_id" type="onepagecustommenuid"
			label="COM_ONEPAGE_FIELD_MENU_ID_LABEL" 
			description ="COM_ONEPAGE_FIELD_MENU_ID_DESC" required="true" 
			 />

		<field name="menu_type" type="onepagecustommenutype"
			label="COM_ONEPAGE_FIELD_MENU_TYPE_LABEL" 
			description ="COM_ONEPAGE_FIELD_MENU_TYPE_DESC" required="true" 
			 />
        <field name="link" type="hidden" default=""
            label="COM_ONEPAGE_FIELD_LINK_LABEL" description ="COM_ONEPAGE_FIELD_LINK_DESC" />  
            
        <field name="value" type="editor" filter="JComponentHelper::filterText" rows="3" cols="30" label="COM_ONEPAGE_FIELD_VALUE_LABEL"
            description="COM_ONEPAGE_FIELD_VALUE_DESC" />                       

		
		<field name="state" type="list"
			label="JSTATUS" description="COM_ONEPAGE_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>



</form>
