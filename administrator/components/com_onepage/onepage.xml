<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id: onepage.xml $ -->
<extension type="component" version="1.7" method="upgrade">
	<name>com_onepage</name>
	<author></author>
	<creationDate>2014</creationDate>
	<copyright>(C) 2005 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>nguyenhuykien@xipat.com</authorEmail>
	<authorUrl>www.xipat.com</authorUrl>
	<version>1.0</version>
	<description></description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<files folder="site">
		<filename>onepage.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>assets</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<administration>
		<menu>com_onepage</menu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>onepage.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>assets</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_onepage.ini</language>
			<language tag="en-GB">language/en-GB.com_onepage.sys.ini</language>
		</languages>
	</administration>
</extension>

