<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" method="upgrade" client="administrator">
	<name>MailChimp Stats</name>
	<version>1.1</version>
	<creationDate>2014-08-16</creationDate>
	<author>freakedout</author>
	<authorEmail>contact@feakedout.de</authorEmail>
	<authorUrl>http://www.freakedout.de</authorUrl>
	<copyright>Copyright (C) 2014 freakedout - All rights reserved.</copyright>
	<license>GNU/GPL - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<description>This module shows a quick overview of your campaign statistics.</description>

	<files>
		<filename module="mod_mailchimpstats">mod_mailchimpstats.php</filename>
	</files>

    <media destination="mod_mailchimpstats" folder="media">
        <filename>mailchimpstats.css</filename>
        <filename>mailchimpstats.js</filename>
        <filename>index.html</filename>
    </media>

	<config>
        <fields name="params">
            <fieldset name="basic">
		        <field name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
			        <option value="0">Never</option>
	  	        </field>
            </fieldset>
        </fields>
	</config>
</extension>
